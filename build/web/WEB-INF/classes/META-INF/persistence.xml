<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="WS_AttendanceControlPU" transaction-type="RESOURCE_LOCAL">
    <class>modelo.entidades.Docente</class>
    <class>modelo.entidades.Administrativo</class>
    <class>modelo.entidades.Personal</class>
    <class>modelo.entidades.Asistencia</class>
    <class>modelo.entidades.Jornada</class>
    <class>modelo.entidades.Empleado</class>
    <class>modelo.entidades.Materia</class>
    <class>modelo.entidades.TipoEmpleado</class>
    <class>modelo.entidades.Aula</class>
    <class>modelo.entidades.FechaHabil</class>
    <class>modelo.entidades.Horario</class>
    <class>modelo.entidades.Tipo</class>
    <class>modelo.entidades.Estado</class>
    <class>modelo.entidades.ViewNombreCompleto</class>
    <class>modelo.entidades.VistaDocente</class>
    <class>modelo.entidades.VistaJornada</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3307/control_asistencia?zeroDateTimeBehavior=CONVERT_TO_NULL"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
    </properties>
  </persistence-unit>
</persistence>
